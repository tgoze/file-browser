@page
@model IndexModel
<!-- @{
    ViewData["Title"] = "Home page";
} -->

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <nav class="circular-menu">

        <div class="circle">        
            @if (Model.GetType().GetProperty("files") != null) {                
                for (var i = 0; i < Model.files.Count; i++)
                {            
                    <form id="form" asp-page-handler="view" method="post">                        
                        <div><input type="hidden" name="subFolderId" value="@i"/></div>
                        <a onclick="form.submit();"><h5>@Model.files[i]</h5></a>
                    </form>                                     
                }
            }
        </div>    
        <a href="" class="menu-button"><h5>@Model.chosenDirectoryName</h5></a>    
    </nav>    
</div>
